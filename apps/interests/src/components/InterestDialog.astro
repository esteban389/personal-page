---
interface Props {
  interest: {
    id: string;
    name: string;
    description: string;
    type: string;
    image?: string;
    link?: string;
    tags?: string[];
    additionalUrls?: Array<{ url: string; description: string }>;
    isCurrent?: boolean;
  };
}

const { interest } = Astro.props;
---

<dialog class="interest-dialog" id={`dialog-${interest.id}`}>
  <div class="interest-dialog__container">
    <button class="interest-dialog__close" aria-label="Close dialog">Ã—</button>
    
    {interest.image && (
      <div class="interest-dialog__image">
        <img src={interest.image} alt={interest.name} />
      </div>
    )}
    
    <div class="interest-dialog__content">
      <div class="interest-dialog__header">
        <h2 class="interest-dialog__name">{interest.name}</h2>
        {interest.isCurrent && (
          <span class="interest-dialog__badge" aria-label="Current interest">Current</span>
        )}
      </div>
      
      <p class="interest-dialog__type">{interest.type}</p>
      
      <div class="interest-dialog__description">
        <p>{interest.description}</p>
      </div>
      
      {interest.tags && interest.tags.length > 0 && (
        <div class="interest-dialog__tags">
          <h3 class="interest-dialog__section-title">Tags</h3>
          <div class="interest-dialog__tags-list">
            {interest.tags.map((tag) => (
              <span class="interest-dialog__tag">{tag}</span>
            ))}
          </div>
        </div>
      )}
      
      {interest.link && (
        <div class="interest-dialog__link">
          <h3 class="interest-dialog__section-title">Link</h3>
          <a href={interest.link} target="_blank" rel="noopener noreferrer" class="interest-dialog__link-url">
            {interest.link}
          </a>
        </div>
      )}
      
      {interest.additionalUrls && interest.additionalUrls.length > 0 && (
        <div class="interest-dialog__additional-urls">
          <h3 class="interest-dialog__section-title">Additional Links</h3>
          <ul class="interest-dialog__urls-list">
            {interest.additionalUrls.map((item) => (
              <li>
                <a href={item.url} target="_blank" rel="noopener noreferrer" class="interest-dialog__url-item">
                  <span class="interest-dialog__url-description">{item.description}</span>
                  <span class="interest-dialog__url-link">{item.url}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </div>
</dialog>

<style>
  .interest-dialog {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
    padding: 0;
    border: none;
    background: transparent;
    max-width: 100vw;
    max-height: 100vh;
    z-index: var(--z-modal);
  }

  .interest-dialog::backdrop {
    background: var(--color-overlay);
  }

  .interest-dialog__container {
    position: relative;
    background: var(--color-background);
    border-radius: var(--radius-lg);
    max-width: 90vw;
    max-height: 90vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow-xl);
    z-index: var(--z-base);
  }

  .interest-dialog__close {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    width: 2.5rem;
    height: 2.5rem;
    border: none;
    background: var(--color-surface);
    border-radius: var(--radius-full);
    font-size: var(--font-size-2xl);
    line-height: 1;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: var(--z-base);
    transition: background var(--transition-base);
    color: var(--color-text);
  }

  .interest-dialog__close:hover {
    background: var(--color-border);
  }

  .interest-dialog__close:active {
    transform: scale(0.95);
  }

  .interest-dialog__image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-border-light);
  }

  .interest-dialog__image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .interest-dialog__content {
    padding: var(--spacing-lg);
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .interest-dialog__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--spacing-sm);
  }

  .interest-dialog__name {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    color: var(--color-text);
    flex: 1;
  }

  .interest-dialog__badge {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-sm);
    background: var(--color-success);
    color: white;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-full);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .interest-dialog__type {
    font-size: var(--font-size-base);
    color: var(--color-text-muted);
    text-transform: capitalize;
    font-weight: var(--font-weight-medium);
  }

  .interest-dialog__description {
    font-size: var(--font-size-base);
    color: var(--color-text);
    line-height: var(--line-height-relaxed);
  }

  .interest-dialog__section-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .interest-dialog__tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .interest-dialog__tag {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--color-border-light);
    color: var(--color-text);
    font-size: var(--font-size-sm);
    border-radius: var(--radius-md);
    font-weight: var(--font-weight-medium);
  }

  .interest-dialog__link-url {
    display: inline-block;
    color: var(--color-primary);
    text-decoration: none;
    word-break: break-all;
    font-size: var(--font-size-sm);
    transition: color var(--transition-base);
  }

  .interest-dialog__link-url:hover {
    color: var(--color-primary-hover);
    text-decoration: underline;
  }

  .interest-dialog__urls-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .interest-dialog__url-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    color: var(--color-primary);
    text-decoration: none;
    padding: var(--spacing-md);
    background: var(--color-surface);
    border-radius: var(--radius-md);
    transition: background var(--transition-base);
  }

  .interest-dialog__url-item:hover {
    background: var(--color-border-light);
  }

  .interest-dialog__url-description {
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
  }

  .interest-dialog__url-link {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    word-break: break-all;
  }

  @media (min-width: 768px) {
    .interest-dialog__container {
      max-width: 600px;
    }

    .interest-dialog__content {
      padding: var(--spacing-xl);
    }

    .interest-dialog__name {
      font-size: var(--font-size-3xl);
    }
  }
</style>

<script define:vars={{ dialogId: `dialog-${interest.id}` }}>
  // Handle dialog interactions for this specific dialog
  const setupDialog = () => {
    const dialog = document.getElementById(dialogId);
    if (!dialog) {
      // Retry if dialog not found yet
      setTimeout(setupDialog, 100);
      return;
    }
    
    const closeButton = dialog.querySelector('.interest-dialog__close');
    const container = dialog.querySelector('.interest-dialog__container');
    
    if (closeButton) {
      closeButton.addEventListener('click', () => {
        dialog.close();
      });
    }
    
    // Handle clicks on the backdrop to close the dialog
    // When clicking outside the container (on the backdrop), close the dialog
    dialog.addEventListener('click', (e) => {
      // If the click target is the dialog itself or the backdrop, close it
      // The container click handler will stop propagation for clicks inside
      if (e.target === dialog || !container?.contains(e.target)) {
        dialog.close();
      }
    });
    
    // Prevent closing when clicking inside the container
    if (container) {
      container.addEventListener('click', (e) => {
        e.stopPropagation();
      });
    }
  };
  
  // Setup when DOM is ready or immediately if already loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupDialog);
  } else {
    setupDialog();
  }
</script>

